<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.illinois.finalproject">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:fullBackupContent="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainSignInActivity"
            android:configChanges="keyboardHidden|keyboard|orientation|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AudienceHomeActivity"
            android:label="Audience Home"></activity>
        <activity
            android:name=".DJHomeActivity"
            android:label="DJ Home"></activity>
        <activity
            android:name=".CreateRoomActivity"
            android:label="Create Room"></activity>
        <activity
            android:name=".SelectPlaylistActivity"
            android:label="Select Playlist">
        </activity>
    </application>

</manifest>