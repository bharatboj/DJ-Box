<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#333333"
    android:orientation="vertical"
    android:padding="25sp">

    <TextView
        style="?android:listSeparatorTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="#999999" />

    <TextView
        android:id="@+id/tv_playlists"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/my_playlists"
        android:textSize="20sp"
        android:textColor="#999999" />

    <TextView
        style="?android:listSeparatorTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="#999999"
        android:textColor="#999999" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ListView
            android:id="@+id/lv_playlists_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:divider="#777777"
            android:dividerHeight="1sp"
            android:listSelector="#202020" />

        <Button
            android:id="@+id/b_choose_playlist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:onClick="addPlaylistOnceChosen"
            android:background="@color/lightGreen"
            android:text="@string/choose" />
    </LinearLayout>

</LinearLayout>